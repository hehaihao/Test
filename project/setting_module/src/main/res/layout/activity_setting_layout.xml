<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/layout_base_white_top_bar" />

    <RelativeLayout
        android:id="@+id/wallet_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/wallet_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/setting_wallet_manager_icon"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/wallet_icon"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="@string/manager_wallet_title"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/to_right_icon_black"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/address_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/address_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/address_edit_icon"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/address_icon"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="@string/address_list_title"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/to_right_icon_black"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/system_setting_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/system_setting_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/setting_icon"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/system_setting_icon"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="@string/system_setting_str"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/to_right_icon_black"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/version_update_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/version_update_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/setting_update_icon"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:text="@string/app_version_update_str"/>

        <ImageView
            android:id="@+id/version_update_iv_red_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/update_red_piont"
            android:layout_gravity="center"
            android:visibility="gone"
            tools:visibility="visible"
            />

        <TextView
            android:id="@+id/version_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:drawablePadding="5dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/color_048bd9"
            tools:text="V1.0.0"
            tools:visibility="visible" />


        <ImageView
            android:id="@+id/right_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/to_right_icon_black"
            android:layout_gravity="center"
            />

    </LinearLayout>

</LinearLayout>