<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:id="@+id/top_layout"
    android:background="@drawable/blue8_top_conner_365cfe_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/wallet_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/loading_str"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:maxEms="6"
        android:maxLines="1"
        android:ellipsize="end"
        android:drawablePadding="@dimen/dp15"
        app:drawableEndCompat="@mipmap/home_switch_wallet_icon" />

    <LinearLayout
        android:id="@+id/address_lin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="middle"
            android:maxEms="42"
            android:text="@string/loading_str"
            android:textColor="@color/white_80a"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/copy_address_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="5dp"
            android:src="@mipmap/address_copy_white_icon"/>

    </LinearLayout>

</LinearLayout>