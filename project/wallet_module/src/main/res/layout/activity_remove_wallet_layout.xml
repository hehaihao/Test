<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/layout_new_base_white_top_bar" />

    <TextView
        android:layout_below="@id/root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wallet_remove_hint"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/black_60a"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/wallet_remove_tv_remove"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="20dp"
        android:background="@drawable/blue25_stroke_white_bg"
        android:text="@string/wallet_remove_remove"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/color3256E1"
        android:layout_marginTop="15dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>