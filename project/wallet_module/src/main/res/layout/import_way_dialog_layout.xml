<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/white_20dp_top_conner">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/close_icon"
            android:layout_marginEnd="10dp"
            android:padding="10dp"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:text="@string/import_wallet_title"
            android:textColor="@color/black"
            android:textSize="18sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/words_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_conner_shadow_bg"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/words_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="8dp"
            android:layout_alignParentStart="true"
            android:src="@mipmap/words_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/words_icon"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:text="@string/import_by_words"
            android:textColor="@color/black"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/words_icon"
            android:layout_alignBottom="@id/words_icon"
            android:layout_marginTop="@dimen/margin5dp"
            android:gravity="center"
            android:text="@string/import_by_words_desc"
            android:textColor="@color/black_50a"
            android:layout_marginBottom="2dp"
            android:textSize="11sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/private_key_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_conner_shadow_bg"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <ImageView
            android:id="@+id/private_key_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="8dp"
            android:layout_alignParentStart="true"
            android:src="@mipmap/private_key_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/private_key_icon"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:text="@string/import_by_private_key"
            android:textColor="@color/black"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/private_key_icon"
            android:layout_alignBottom="@id/private_key_icon"
            android:layout_marginTop="@dimen/margin5dp"
            android:gravity="center"
            android:text="@string/import_by_private_key_desc"
            android:textColor="@color/black_50a"
            android:layout_marginBottom="2dp"
            android:textSize="11sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/keystore_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_conner_shadow_bg"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp">

        <ImageView
            android:id="@+id/keystore_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="8dp"
            android:layout_alignParentStart="true"
            android:src="@mipmap/keystore_icon"/>

        <TextView
            android:id="@+id/keystore_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/keystore_icon"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:text="@string/import_by_keystore"
            android:textColor="@color/black"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/keystore_title"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="@string/import_recommend"
            android:textColor="@color/white"
            android:background="@drawable/orange_3dp_conner"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/keystore_icon"
            android:layout_alignBottom="@id/keystore_icon"
            android:layout_marginTop="@dimen/margin5dp"
            android:gravity="center"
            android:text="@string/import_by_keystore_desc"
            android:textColor="@color/black_50a"
            android:layout_marginBottom="2dp"
            android:textSize="11sp"/>

    </RelativeLayout>

</LinearLayout>