<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@drawable/white_conner_shadow_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img"
            android:layout_alignTop="@id/img"
            android:singleLine="true"
            android:ellipsize="middle"
            tools:text="合约地址：8797654598554"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/type_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/name_tv"
            android:layout_below="@id/name_tv"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:ellipsize="end"
            tools:text="转移类型：转出"
            android:textSize="11sp"
            android:textColor="@color/black_60a"/>
        <TextView
            android:id="@+id/date_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/name_tv"
            android:layout_below="@id/type_tv"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:ellipsize="end"
            tools:text="2022/02/02 12:11:44"
            android:textSize="11sp"
            android:textColor="@color/black_60a"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/from_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:ellipsize="middle"
        tools:text="发送者地址：8797654598554"
        android:textSize="14sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/to_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:ellipsize="middle"
        tools:text="接收者地址：8797654598554"
        android:textSize="14sp"
        android:textColor="@color/black"/>
</LinearLayout>
