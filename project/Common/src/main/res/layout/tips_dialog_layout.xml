<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:background="@drawable/white_10dp_conner">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:text="提示"/>


    <TextView
        android:id="@+id/content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/black_60a"
        android:textSize="16sp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        tools:text="提示"/>
    <TextView
        android:id="@+id/second_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black_60a"
        android:textSize="13sp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        tools:text="提示"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="15dp"
        android:background="@color/black_10a"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/white_10dp_top_conner"
        app:layout_constraintTop_toBottomOf="@id/content_tv">

        <TextView
            android:id="@+id/sure_tv"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:textColor="@color/color_365cfe"
            android:textSize="16sp"
            android:text="@string/sure"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>